{
  "name": "telemetry-kit",
  "displayName": "telemetry-kit",
  "description": "Intelligent telemetry suggestions and snippets for Rust applications using telemetry-kit",
  "version": "0.1.0",
  "publisher": "telemetry-kit",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/ibrahimcesar/telemetry-kit"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Linters"
  ],
  "keywords": [
    "rust",
    "telemetry",
    "observability",
    "monitoring",
    "analytics"
  ],
  "activationEvents": [
    "onLanguage:rust",
    "workspaceContains:**/Cargo.toml"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "telemetry-kit.analyzeProject",
        "title": "telemetry-kit: Analyze Project",
        "category": "telemetry-kit"
      },
      {
        "command": "telemetry-kit.addTelemetry",
        "title": "telemetry-kit: Add Telemetry Here",
        "category": "telemetry-kit"
      },
      {
        "command": "telemetry-kit.initProject",
        "title": "telemetry-kit: Initialize Project",
        "category": "telemetry-kit"
      }
    ],
    "configuration": {
      "title": "telemetry-kit",
      "properties": {
        "telemetry-kit.autoSuggest": {
          "type": "boolean",
          "default": true,
          "description": "Automatically show telemetry suggestions in Rust files"
        },
        "telemetry-kit.showInlineHints": {
          "type": "boolean",
          "default": true,
          "description": "Show inline hints for instrumentation opportunities"
        },
        "telemetry-kit.diagnosticSeverity": {
          "type": "string",
          "enum": ["Error", "Warning", "Information", "Hint"],
          "default": "Hint",
          "description": "Severity level for telemetry suggestions"
        },
        "telemetry-kit.cliPath": {
          "type": "string",
          "default": "telemetry-kit",
          "description": "Path to telemetry-kit CLI executable"
        }
      }
    },
    "snippets": [
      {
        "language": "rust",
        "path": "./snippets/telemetry.json"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "telemetry-kit.addTelemetry",
          "when": "editorLangId == rust",
          "group": "1_modification"
        }
      ],
      "commandPalette": [
        {
          "command": "telemetry-kit.analyzeProject",
          "when": "workspaceFolderCount > 0"
        },
        {
          "command": "telemetry-kit.addTelemetry",
          "when": "editorLangId == rust"
        },
        {
          "command": "telemetry-kit.initProject",
          "when": "workspaceFolderCount > 0"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js",
    "lint": "eslint src --ext ts",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vscode/test-electron": "^2.3.8",
    "eslint": "^8.54.0",
    "typescript": "^5.3.2",
    "@vscode/vsce": "^2.22.0"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  }
}
